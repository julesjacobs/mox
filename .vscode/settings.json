{
  "files.associations": {
    "*.mox": "mox"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "markup.italic.mox",
          "markup.italic.mode.mox"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "entity.name.type.mode.mox",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "invalid.illegal.error.mox",
        "settings": {
          "foreground": "#ff5f5f"
        }
      }
    ]
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.mox$",
        "cmd": "dune exec bin/main.exe record tests/mox",
        "autoShowOutputPanel": "always"
      }
    ]
  }
}
