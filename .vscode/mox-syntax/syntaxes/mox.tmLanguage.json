{
  "scopeName": "source.mox",
  "name": "Mox",
  "patterns": [
    { "include": "#comments" },
    { "include": "#result" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#mode-annotations" },
    { "match": "[a-zA-Z_][\\w']*", "name": "variable.other.mox" }
  ],
  "repository": {
    "comments": {
      "name": "comment.block.mox",
      "begin": "\\(\\*",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.comment.begin.mox" }
      },
      "end": "\\*\\)",
      "endCaptures": {
        "0": { "name": "punctuation.definition.comment.end.mox" }
      },
      "patterns": [
        { "include": "#comments" }
      ]
    },
    "result": {
      "name": "markup.italic.mox",
      "match": "^(>)(\\s*)(error:)?(.*)$",
      "captures": {
        "1": { "name": "punctuation.definition.result.mox" },
        "3": { "name": "invalid.illegal.error.mox" },
        "4": { "name": "string.unquoted.result.mox" }
      }
    },
    "strings": {
      "name": "string.quoted.double.mox",
      "begin": "\"",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.mox" }
      },
      "end": "\"",
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.mox" }
      },
      "patterns": [
        { "match": "\\\\.", "name": "constant.character.escape.mox" }
      ]
    },
    "numbers": {
      "name": "constant.numeric.mox",
      "match": "\\b[0-9]+\\b"
    },
    "keywords": {
      "name": "keyword.control.mox",
      "match": "(?:let!|match!|\\b(let|in|fun|match|with|ref|fork|left|right|absurd|region|unit)\\b)"
    },
    "builtins": {
      "patterns": [
        {
          "name": "constant.language.mox",
          "match": "\\b(empty|true|false)\\b"
        },
        {
          "name": "storage.type.mox",
          "match": "\\b(unique|aliased|contended|shared|uncontended|local|regional|global|portable|non-portable|once|many)\\b"
        }
      ]
    },
    "operators": {
      "name": "keyword.operator.mox",
      "match": "(?:=>|->|\\+|\\||\\*|\\?|:|,|=|\\$|!|\\(|\\))"
    },
    "mode-annotations": {
      "name": "meta.annotation.mode.mox markup.italic.mode.mox",
      "contentName": "entity.other.attribute-name.mode.mox markup.italic.mode.mox",
      "begin": "\\[",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.annotation.begin.mox" }
      },
      "end": "\\]",
      "endCaptures": {
        "0": { "name": "punctuation.definition.annotation.end.mox" }
      },
      "patterns": [
        {
          "match": "\\b(unique|aliased|contended|shared|uncontended|local|regional|global|portable|non-portable|once|many|never)\\b",
          "name": "entity.name.type.mode.mox markup.italic.mode.mox"
        }
      ]
    }
  }
}
